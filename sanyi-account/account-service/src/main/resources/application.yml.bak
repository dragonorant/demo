  shardingsphere:
    datasource:
#      common:
#        type: com.zaxxer.hikari.HikariDataSource
#        driver-class-name: com.mysql.cj.jdbc.Driver
      names: master,slave
      master:
        type: com.zaxxer.hikari.HikariDataSource
        driver-class-name: com.mysql.cj.jdbc.Driver
        username: root
        password: root
        ## 使用 lvs 搭建高可用
        jdbc-url: jdbc:mysql://172.19.1.251:3306/yoyo_account?characterEncoding=utf8&zeroDateTimeBehavior=convertToNull&useSSL=false&allowMultiQueries=true&useJDBCCompliantTimezoneShift=true&useLegacyDatetimeCode=false&serverTimezone=Asia/Shanghai
      slave: # 直接 slave 123
        type: com.zaxxer.hikari.HikariDataSource
        driver-class-name: com.mysql.cj.jdbc.Driver
        username: root
        password: root
        jdbc-url: jdbc:mysql://172.19.1.250:3306/yoyo_account?characterEncoding=utf8&zeroDateTimeBehavior=convertToNull&useSSL=false&allowMultiQueries=true&useJDBCCompliantTimezoneShift=true&useLegacyDatetimeCode=false&serverTimezone=Asia/Shanghai
    props:
      sql-show: true
    rules:
      # 读写分离
      readwrite_splitting:
        data-sources:
          yoyo_account:
            auto-aware-data-source-name: master,slave
            write-data-source-name: master
            read-data-source-names: slave
            load-balancers-name: round-robin
        load-balancers:
          round-robin:
            type: ROUND_ROBIN
            props:
              workId: 1
      sharding:
        tables:
          yoyo_account:
            actual-data-nodes: master.yoyo_account_$->{0..4}
            table-strategy:
              standard:
                sharding-column: account_id
                sharding-algorithm-name: account-inline
          yoyo_third:
            actual-data-nodes: master.yoyo_third_$->{0..4}
            table-strategy:
              standard:
                sharding-column: account_id
                sharding-algorithm-name: third-inline
        sharding-algorithms:
          account-inline:
            type: HASH_MOD
            props:
              sharding-count: 5
          third-inline:
            type: HASH_MOD
            props:
              sharding-count: 5
        binding-tables[0]: yoyo_account,yoyo_third
      # 日期分表
    enabled: true
